<script>
    function login() {
        let name = document.getElementById("username").value;
        if (name === "") {
            alert("Please enter your name");
            return;
        }
        document.getElementById("loginSection").style.display = "none";
        document.getElementById("testSection").style.display = "block";
        document.getElementById("welcome").innerText = "Welcome, " + name;
    }

    function submitTest() {
        let answers = {
            q1: "B",
            q2: "B",
            q3: "A",
            q4: "C",
            q5: "A"
        };

        let score = 0;

        for (let q in answers) {
            let selected = document.querySelector(`input[name="${q}"]:checked`);
            let answerSpan = document.getElementById("a" + q.substring(1));

            if (selected) {
                if (selected.value === answers[q]) {
                    score++;
                    answerSpan.innerHTML = " ✔ Correct";
                    answerSpan.className = "correct";
                } else {
                    answerSpan.innerHTML = " ✘ Correct answer is " + answers[q];
                    answerSpan.className = "wrong";
                }
            } else {
                answerSpan.innerHTML = " ✘ No answer selected. Correct answer is " + answers[q];
                answerSpan.className = "wrong";
            }
        }

        document.getElementById("score").innerText =
            "You scored " + score + " out of 5";
    }
</script>

