            <input type="radio" name="q5" value="B"> 50°C<br>
            <input type="radio" name="q5" value="C"> 100°C<br>
            <span id="a5"></span>
        </div>

        <button type="button" onclick="submitTest()">Submit Test</button>
    </form>

    <h3 id="score"></h3>
